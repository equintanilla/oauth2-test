{
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-bitwise": 2,
        "guard-for-in": 1,
        "wrap-iife": [2, "inside"],
        "strict": [2, "global"],
        "no-unused-vars": 2
    },
    "env": {
        "es6": true,
        "node": true
    },
    "ecmaFeatures": {
        "modules": true
    }
}
